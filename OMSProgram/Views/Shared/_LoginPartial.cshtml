@inject Microsoft.AspNetCore.Identity.SignInManager<OMSProgram.Models.ApplicationUser> signInManager
<link href="/css/site.css" rel="stylesheet" />
@if (signInManager.IsSignedIn(User))
{
	<form method="post" id=" logoutForm" asp-action="Logoff" asp-controller="Account"> 
		<ul class="nav navbar-nav">
			<li class="text-white nav-link">@User.Identity.Name</li>
			<li><a class="nav-link" id="nav-link-a" asp-action="Logoff" asp-controller="Account">Излизане</a></li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav">
		<li class="nav-item">
			<a class="nav-link" id="nav-link-a" asp-action="Register" asp-controller="Account" id="registerLink">Регистрация</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="nav-link-a" asp-action="Login" asp-controller="Account" id="loginLink">Влизане в профил</a>
		</li>
	</ul>
}