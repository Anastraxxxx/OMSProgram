@model IEnumerable<OMSProgram.Models.ViewModels.Product>

<a asp-action="EditShop" asp-controller="Shop">Промени Магазина</a>
<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>Име</th>
					<th>Цена</th>
					<th>Описание</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Price)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td class=" align-middle">
							<a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Изтрий</i></a>
							<a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye">Детайли</i></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
